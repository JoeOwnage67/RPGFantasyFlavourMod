<?xml version="1.0" encoding="utf-8"?>

<Patch>
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/FactionDef/canMakeRandomly</xpath>
        <match Class="PatchOperationReplace">
            <xpath>Defs/FactionDef/canMakeRandomly</xpath>
            <value>
                <canMakeRandomly>false</canMakeRandomly>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/FactionDef</xpath>
            <value>
                <canMakeRandomly>false</canMakeRandomly>
            </value>
        </nomatch>
    </Operation>

    <Operation Class="PatchOperationConditional">
        <xpath>Defs/FactionDef/requiredCountAtGameStart</xpath>
        <match Class="PatchOperationReplace">
            <xpath>Defs/FactionDef/requiredCountAtGameStart</xpath>
            <value>
                <requiredCountAtGameStart>0</requiredCountAtGameStart>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/FactionDef</xpath>
            <value>
                <requiredCountAtGameStart>0</requiredCountAtGameStart>
            </value>
        </nomatch>
    </Operation>

    <Operation Class="PatchOperationConditional">
        <xpath>Defs/FactionDef/maxCountAtGameStart</xpath>
        <match Class="PatchOperationReplace">
            <xpath>Defs/FactionDef/maxCountAtGameStart</xpath>
            <value>
                <maxCountAtGameStart>0</maxCountAtGameStart>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/FactionDef</xpath>
            <value>
                <maxCountAtGameStart>0</maxCountAtGameStart>
            </value>
        </nomatch>
    </Operation>

    <Operation Class="PatchOperationConditional">
        <xpath>Defs/FactionDef/mustStartOneEnemy</xpath>
        <match Class="PatchOperationReplace">
            <xpath>Defs/FactionDef/mustStartOneEnemy</xpath>
            <value>
                <mustStartOneEnemy>false</mustStartOneEnemy>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/FactionDef</xpath>
            <value>
                <mustStartOneEnemy>false</mustStartOneEnemy>
            </value>
        </nomatch>
    </Operation>
</Patch>
